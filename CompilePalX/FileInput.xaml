<UserControl x:Class="CompilePalX.FileInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompilePalX"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="textBox" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/> <!--KeyUp="OnConfigChanged"/>-->
            <Button Grid.Column="1" Click="FileBrowse_OnClick">...</Button>
        </Grid>
    </Grid>
</UserControl>
