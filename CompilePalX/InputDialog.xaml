<controls:MetroWindow x:Class="CompilePalX.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Height="170" Width="320" MaxHeight="170" MinHeight="170" MaxWidth="320" MinWidth="320"
                      IconEdgeMode="Aliased" Icon="CompilePalIcon.ico" ShowIconOnTitleBar="False" 
        Title="Input">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox Name="InputTextBox" Grid.Row ="0" Margin="20,10,20,0" Height="24" VerticalAlignment="Center" KeyDown="InputTextBox_KeyDown"></TextBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Button Name="OKButton" Grid.Column ="1" Width="80" Height="24" Click="OKButton_OnClick">OK</Button>
            <Button Name="CancelButton" Grid.Column ="2" Width="80" Height="24" Click="CancelButton_OnClick">Cancel</Button>
        </Grid>

    </Grid>
</controls:MetroWindow>
